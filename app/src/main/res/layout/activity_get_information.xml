<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GetInformation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:text="Asset Information"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="153dp"
            android:layout_height="33dp"
            android:text="Asset: " />

        <TextView
            android:id="@+id/category"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="157dp"
            android:layout_height="33dp"
            android:text="Number of Such Assets" />

        <TextView
            android:id="@+id/number_of_assets"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="148dp"
            android:layout_height="33dp"
            android:text="Date of Purchase" />

        <TextView
            android:id="@+id/date_of_purchase"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="154dp"
            android:layout_height="33dp"
            android:text="Warranty Upto: " />

        <TextView
            android:id="@+id/date_of_warranty"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="33dp"
            android:text="Seller Info: " />

        <TextView
            android:id="@+id/seller"
            android:layout_width="186dp"
            android:layout_height="45dp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/issued_to_textview"
            android:layout_width="154dp"
            android:layout_height="33dp"
            android:text="Issued To: " />

        <TextView
            android:id="@+id/issued_to"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/issued_date_textview"
            android:layout_width="154dp"
            android:layout_height="33dp"
            android:text="Issued Date: " />

        <TextView
            android:id="@+id/issued_date"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/working_status"
            android:layout_width="122dp"
            android:layout_height="33dp"
            android:text="Working Status" />

        <Switch
            android:id="@+id/change_status"
            android:layout_width="122dp"
            android:layout_height="33dp"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/get_geolocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="Get Geolocation" />

        <Button
            android:id="@+id/view_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Bill" />
    </LinearLayout>


    <Button
        android:id="@+id/report_status"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="Report Asset" />

</LinearLayout>