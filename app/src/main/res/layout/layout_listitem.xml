<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/parent_layout_requested"
    android:padding="15dp">

    <TextView
        android:id="@+id/asset_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/asset"
        android:text="Asset Type:"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/asset_number"
        android:text="Number: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/asset_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="number"
        android:textAlignment="viewEnd"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/requested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_type"
        android:layout_marginTop="10dp"
        android:text="Requested By: "
        android:textSize="17sp" />

    <TextView
        android:id="@+id/requested_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_type"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/requested"
        android:text="Prince"
        android:textSize="17sp" />

</RelativeLayout>