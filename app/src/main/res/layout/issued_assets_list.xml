<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_issued_assets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/asset"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asset: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/asset_type"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/asset"
        android:text="Asset Name"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/asset_number"
        android:text="Number: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/asset_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/reported"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_type"
        android:layout_marginTop="10dp"
        android:text="Date: "
        android:textSize="17sp" />

    <TextView
        android:id="@+id/issued_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_type"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/reported"
        android:text="Prince"
        android:textSize="17sp" />
</RelativeLayout>