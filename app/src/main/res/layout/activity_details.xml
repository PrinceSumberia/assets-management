<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:orientation="vertical"
    tools:context=".Details">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Enter Asset Details"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="33dp"
            android:text="Category" />

        <EditText
            android:id="@+id/category"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:hint="Add Category" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="33dp"
            android:text="Number of Such Assets" />

        <EditText
            android:id="@+id/number_of_assets"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:hint="Enter Number of Such Assets"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="33dp"
            android:text="Date of Purchase" />

        <EditText
            android:id="@+id/date_of_purchase"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:hint="Select Date" />

        <Button
            android:id="@+id/select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="33dp"
            android:text="Warranty" />

        <EditText
            android:id="@+id/date_of_warranty"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:hint="Select Date" />

        <Button
            android:id="@+id/warranty_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:text="Bill" />

        <Button
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Bill" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="133dp"
            android:layout_height="33dp"
            android:text="Seller" />

        <EditText
            android:id="@+id/seller"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:hint="Enter Seller Details"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="10" />
    </LinearLayout>

    <Button
        android:id="@+id/geotag"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="Click Here To GeoTag" />

    <Button
        android:id="@+id/save_info"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Information" />

    <Button
        android:id="@+id/next_ac"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Issuing Information" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>